<% provide(:title, 'Sign up') %>

<h1>Sign up foo </h1>
<div>
	<%=form_for @user, :url => {:action =>  "create"} do |f| %>
	
	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%=f.label :email  %>
	<%= f.text_field :email %>
	
	<%=f.label :password  %>
	<%= f.password_field :password %>
	
	<%=f.label :password_confirmation, "Password Confirmation"  %>
	<%=  f.password_field :password_confirmation %>
	
	<%=f.submit "Join"  %>
	<%end  %>


	<% if flash[:error] %>
		<% flash[:error].each do |t| %>
		<p><%= t %></p>
		<% end %>
	<% end %>
	

</div>